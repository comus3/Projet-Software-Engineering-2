<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KitBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KitBox"
    xmlns:views="clr-namespace:KitBox.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="KitBox">
    <TabBar> 
        <Tab Title="Cabinet Order">
            <ShellContent
                Title="Cabinet Order"
                ContentTemplate="{DataTemplate views:Customer_catalog}"/>
        </Tab>
        <Tab Title="Panier">
            <ShellContent
                Title="Panier"
                ContentTemplate="{DataTemplate views:Panier}"/>
        </Tab>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
    </TabBar>
</Shell>
