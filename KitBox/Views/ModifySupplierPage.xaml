<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.ModifySupplierPage"
             Title="Modify Supplier's Details"
             BackgroundColor="#FFFFFF"> <!-- Ajout du fond blanc -->
    <ContentPage.Content>
        <StackLayout  VerticalOptions="CenterAndExpand" WidthRequest="500" HorizontalOptions ="Center">
          
            <StackLayout Orientation="Horizontal" >
                <Label Text="Name:" VerticalOptions="Center"/>
                <Entry x:Name="OLDname" Placeholder="Enter Name" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <!-- Entry for Supplier Telephone Number -->
            <StackLayout Orientation="Horizontal" >
                <Label Text="Telephone:" VerticalOptions="Center"/>
                <Entry x:Name="OLDtelephone" Placeholder="Enter Telephone Number" />
            </StackLayout>
            <!-- Entry for Supplier Address -->
            <StackLayout Orientation="Horizontal" >
                <Label Text="Address:" VerticalOptions="Center"/>
                <Entry x:Name="OLDadresse" Placeholder="Enter Address" />
            </StackLayout>
            <!-- Confirm Button -->
            <Button Text="Confirm" Clicked="ConfirmButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
