<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.ModifySupplierPage"
             Title="Modify supplier's details">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <!-- Entry for Old Price Supplier 1 -->
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Name  :  " VerticalOptions="Center"/>
                    <Entry x:Name="OLDname" Placeholder="Name" HorizontalOptions="FillAndExpand" WidthRequest="200"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Number:" VerticalOptions="Center"/>
                    <Entry x:Name="OLDtelephone" Placeholder="Telephone" HorizontalOptions="FillAndExpand" WidthRequest="200"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Adresse: " VerticalOptions="Center"/>
                    <Entry x:Name="OLDadresse" Placeholder="Adresse" HorizontalOptions="FillAndExpand" WidthRequest="200"/>
                </StackLayout>
            </StackLayout>
            <Button Text="Confirmer" Clicked="ConfirmButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>