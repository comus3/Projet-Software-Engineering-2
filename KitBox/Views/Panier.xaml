<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.Panier"
             Title="Panier">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <Label 
            Text="Panier"
            HorizontalOptions="Center" 
            FontSize="24" />

        <!-- Liste des phrases numérotées -->
        <ListView x:Name="lstPhrases" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="{Binding}" VerticalOptions="Center"/>
                            <Button Text="Acheter" Clicked="Acheter_Clicked" CommandParameter="{Binding .}" HorizontalOptions="EndAndExpand"/>
                            <Button Text="Supprimer" Clicked="Supprimer_Clicked" CommandParameter="{Binding .}" HorizontalOptions="End"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>

