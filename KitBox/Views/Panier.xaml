<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.Panier"
             Title="Panier">
    <VerticalStackLayout>
        <Label Text="Votre commande a été enregistrée" VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="10,20,10,80"/>
        <Button Text="Retour au menu de commande de meuble" Clicked="OnClicked" 
            Margin="10,5,10,5"/>
        <StackLayout>
            <Label Text="Contenu du panier" Margin="10" FontSize="Large"/>

            <ListView x:Name="lstItems" Margin="10" HeightRequest="300"/>
            <Button Text="Acheter" Clicked="Acheter_Click" Margin="10"/>
            <Button Text="Supprimer" Clicked="Supprimer_Click" Margin="10"/>
            <Button Text="Modifier" Clicked="Modifier_Click" Margin="10"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>
