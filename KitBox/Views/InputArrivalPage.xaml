<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Input Arrival"
             x:Class="KitBox.Views.InputArrivalPage">
    <ContentPage.Content>
        <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="quantityEntry" Placeholder="Quantity" WidthRequest="500" />
            <Button Text="Confirm" Clicked="OnConfirmClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>