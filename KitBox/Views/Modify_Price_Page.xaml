<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.Modify_Price_Page"
             Title="Modify the selling price">
    
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            
            <StackLayout Orientation="Horizontal">
                <Label Text="Price: " VerticalOptions="Center"/>
                <Entry x:Name="OLDselling_price" Placeholder="prix" 
                       HorizontalOptions="FillAndExpand" WidthRequest="200"/>
            </StackLayout>
            
           
            <Button Text="Confirmer" Clicked="ConfirmButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>