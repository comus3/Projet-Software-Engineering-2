<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.ShopKeeperPage"
             Title="Order preparation">
    
    <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
        <Label 
            Text="List of orders to be prepared"
            HorizontalOptions="Center" 
            FontAttributes="Bold"
            VerticalOptions="Start"
            FontSize="24" /> 
    
        <ListView x:Name="dataListView" ItemsSource="{Binding Data}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding id_commande}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>