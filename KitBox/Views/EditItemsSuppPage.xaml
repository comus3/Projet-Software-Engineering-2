<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.EditItemsSuppPage"
             Title="Modify the price and the delay">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <!-- Entry for Old Price Supplier 1 -->
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Price :  " VerticalOptions="Center"/>
                    <Entry x:Name="OLDPrice" Placeholder="Name" HorizontalOptions="FillAndExpand" WidthRequest="200"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Delay:" VerticalOptions="Center"/>
                    <Entry x:Name="OLDDelay" Placeholder="Telephone" HorizontalOptions="FillAndExpand" WidthRequest="200"/>
                </StackLayout>
               
            </StackLayout>
            <Button Text="Confirm" Clicked="ConfirmButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>