<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.FinishPage"
             Title="FinishPage">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="Your order has been registered" VerticalOptions="Center" 
                   HorizontalOptions="Center" Margin="10,20,10,80" FontSize="24"/>
        </StackLayout>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Return to Cabinet Order Menu" Clicked="OnClicked" 
                    Margin="10,5,10,5"
                    BackgroundColor="#007ACC" TextColor="White" CornerRadius="5"
                    WidthRequest="500"/>
        </StackLayout>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Basket" Clicked="BasketClicked" WidthRequest="500" Margin="0,0,0,10"
                    BackgroundColor="#007ACC" TextColor="White" CornerRadius="5"/>
        </StackLayout>
        
    </VerticalStackLayout>

</ContentPage>