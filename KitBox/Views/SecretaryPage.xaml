<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.SecretaryPage">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <Label Text="Secretary Page" VerticalOptions="Center" 
                   HorizontalOptions="Center" FontSize="24"/>
            <SearchBar Placeholder="Enter what you are looking for" PlaceholderColor="Black"/>
            <ListView x:Name="listePiece" VerticalOptions="FillAndExpand" BackgroundColor="#f0f0f0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Frame>
                            <StackLayout Orientation="Vertical" Spacing="10">
                                <Label Text="{Binding Nom}" VerticalOptions="Start" HorizontalOptions="Start"/>
                                <Label Text="{Binding Price}" VerticalOptions="Start" HorizontalOptions="Start"/>
                                <Button Text="Modifier" Clicked="Modifier_Clicked" CommandParameter="{Binding .}" HorizontalOptions="End"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
                        
        
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>