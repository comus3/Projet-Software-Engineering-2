<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitBox.Views.SecretaryPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Secretary Page" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" FontSize="24"/>
            <ListView x:Name="listePiece" VerticalOptions="FillAndExpand" BackgroundColor="#f0f0f0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                               
                                <Label Text="{Binding code}" VerticalOptions="Center"/>
                                <Label Text="{Binding stock}" VerticalOptions="Center"/>
                                <Label Text="{Binding Price_Supplier_1}" VerticalOptions="Center"/>
                                <Label Text="{Binding Price_Supplier_2}" VerticalOptions="Center"/>
                                <Button Text="Modifier" Clicked="Modifier_Clicked" CommandParameter="{Binding .}" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>