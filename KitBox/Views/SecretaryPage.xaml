<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Secretary Page"
             x:Class="KitBox.Views.SecretaryPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <SearchBar Placeholder="Search" x:Name="searchBar" TextChanged="OnSearchBarTextChanged" />
         
            <ListView x:Name="listePiece" VerticalOptions="FillAndExpand" BackgroundColor="#f0f0f0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="{Binding reference}" VerticalOptions="Center"/>
                                <Button Text="Modifier" Clicked="Modifier_Clicked" CommandParameter="{Binding .}" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>